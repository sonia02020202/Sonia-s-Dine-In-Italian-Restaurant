-- Create dessert_items table
CREATE TABLE dessert_items (
  id INT AUTO_INCREMENT PRIMARY KEY,
  name VARCHAR(100) NOT NULL,
  description TEXT,
  price DECIMAL(5,2) NOT NULL,
  image VARCHAR(255)
);

-- Insert dessert items
